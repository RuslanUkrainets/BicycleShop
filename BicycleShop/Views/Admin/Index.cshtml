
@model IEnumerable<BicycleShop.Models.Bicycle>
@{
}

<div>
    <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Wheel Diameter</th>
      <th scope="col">Color</th>
      <th scope="col">Chain</th>
      <th scope="col">Weight</th>
      <th scope="col">Year</th>
      <th scope="col">Price</th>
      <th scope="col">E</th>
      <th scope="col">-</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var bicycle in Model)
    {
        <tr>
            <td>@bicycle.Name</td>
            <td>@bicycle.WheelDiameter</td>
            <td>@bicycle.Color</td>
            <td>@bicycle.Chain</td>
            <td>@bicycle.Weight</td>
            <td>@bicycle.Year</td>
            <td>@bicycle.Price</td>
            <td>
                <a class="btn btn-warning" asp-action="Create" asp-controller="Admin" asp-route-id="@bicycle.Id">Edit</a>
            </td>
            <td>
                @using(@Html.BeginForm("Remove", "Admin"))
                {
                    @Html.Hidden("id", bicycle.Id)
                    <input type="submit" value="Remove" class="btn btn-danger"/>
                }
            </td>
        </tr>        
    }
  </tbody>
</table>
</div>
