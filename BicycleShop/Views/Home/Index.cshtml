@model IEnumerable<BicycleShop.Models.Bicycle> 
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Wheel Diameter</th>
      <th scope="col">Color</th>
      <th scope="col">Chain</th>
      <th scope="col">Weight</th>
      <th scope="col">Year</th>
      <th scope="col">Price</th>
      <th scope="col">+</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var bicycle in Model)
    {
        <tr>
            <td>@bicycle.Name</td>
            <td>@bicycle.WheelDiameter</td>
            <td>@bicycle.Color</td>
            <td>@bicycle.Chain</td>
            <td>@bicycle.Weight</td>
            <td>@bicycle.Year</td>
            <td>@bicycle.Price</td>
            <td>
                @using(Html.BeginForm("AddToCart", "Cart"))
                {
                    @Html.Hidden("id", bicycle.Id)
                    @Html.Hidden("returnUrl", Context.Request.Path)
                    <input class="btn btn-primary" type="submit" value="Add to Cart"/>
                }
            </td>
        </tr>        
    }
  </tbody>
</table>
</div>
