
@{
}

<div>
    <table class="table table-dark table-striped">
         <thead>
              <tr>
                    <th scope="col">
                        <button class="sort btn btn-link">Name</span>
                    </th>
                    <th scope="col">
                        <button class="sort btn btn-link">Wheel Diameter</span>
                    </th>
                    <th scope="col">
                        <button class="sort btn btn-link">Color</span>
                    </th>
                    <th scope="col">
                        <button class="sort btn btn-link">Chain</span>
                    </th>
                    <th scope="col">
                        <button class="sort btn btn-link">Weight</span>
                    </th>
                    <th scope="col">
                        <button class="sort btn btn-link">Year</span>
                    </th>
                    <th scope="col">
                        <button class="sort btn btn-link">Price</button>
                    </th>
                    <th scope="col">
                        <div>
                            <select id="year" name="year" asp-items="Model.Years" style="width: 100px"></select>                            
                            <button id="filter" class="btn btn-primary">Filter</button>
                        </div>
                    </th>
              </tr>
         </thead>
         <tbody>
              @foreach (var bicycle in Model.Bicycles)
              {
                   <tr>
                        <td>@bicycle.Name</td>
                        <td>@bicycle.WheelDiameter</td>
                        <td>@bicycle.Color</td>
                        <td>@bicycle.Chain</td>
                        <td>@bicycle.Weight</td>
                        <td>@bicycle.Year</td>
                        <td>@bicycle.Price</td>
                        <td>
                            @using(Html.BeginForm("AddToCart", "Cart"))
                            {
                                @*@Html.Hidden("id", bicycle.Id)*@
                                <input type="hidden" value="@bicycle.Id" name="id" />
                                @Html.Hidden("returnUrl", Context.Request.Path)
                                <input class="btn btn-primary" type="submit" value="Add to Cart"/>
                            }
                        </td>
                   </tr>        
              }
         </tbody>
</table>
<input type="hidden" id="Page" value="@Model.Page" name="Page"/>
</div>
